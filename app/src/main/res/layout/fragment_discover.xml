<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DiscoverFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/gofragment_instacard"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/instagram"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share your Insta posts on Where2Go"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/close_icon"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bring Your Instagram post in one go!"
                android:layout_marginTop="37dp"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="70dp"
                android:textSize="15sp"
                android:background="@drawable/text_background"
                android:text="MakeMyTrips doesn't store your login info"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="100dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="33dp"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Now"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/blue"
                android:layout_gravity="end"
                android:layout_marginTop="110dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/continuebbookig_gofragmenttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Continue Planning Your Trip"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.085"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gofragment_instacard" />

        <androidx.cardview.widget.CardView
            android:id="@+id/gofragment_tripcard"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toBottomOf="@+id/continuebbookig_gofragmenttext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chennai - Gateway to south India"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/temple_image"/>

            </LinearLayout>

            <TextView
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="37dp"
                android:layout_marginEnd="40dp"
                android:text="What to expect in April- Saree shopping and temple tours." />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="110dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/black" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/traveltrolley"
                android:layout_marginTop="120dp"
                android:layout_marginStart="12dp"/>

            <TextView
                android:layout_width="166dp"
                android:layout_height="33dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="40dp"
                android:text="Know things to do,bookings options,weather more"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore"
                android:textSize="15sp"
                android:layout_marginEnd="7dp"
                android:textColor="@color/blue"
                android:layout_gravity="end"
                android:layout_marginTop="115dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nearbytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nearby Destinations from Chennai"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.085"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gofragment_tripcard" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/place_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/nearbytext"
        tools:listitem="@layout/places_layout" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



